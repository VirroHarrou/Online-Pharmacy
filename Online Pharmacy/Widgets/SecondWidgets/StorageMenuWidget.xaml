<Page
    x:Class="Online_Pharmacy.Widgets.SecondWidgets.StorageMenuWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Online_Pharmacy.Widgets.SecondWidgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="10" CornerRadius="10" Background="#19A33131" BorderThickness="3" BorderBrush="#716363">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1.4*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Price" Grid.Row="2" PlaceholderText="Цена"/>
        <TextBox x:Name="Description" Grid.Row="1" PlaceholderText="Назначение" TextWrapping="Wrap"/>
        <TextBox x:Name="Name" Grid.Row="0" PlaceholderText="Название"/>
            <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Сохранить запись" Click="ButtonCreateClick"/>
    </Grid>
</Page>
